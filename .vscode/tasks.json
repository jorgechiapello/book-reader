    "version": "2.0.0",
    "tasks": [
        {
            "label": "ruff-check",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/ruff check .",
            "problemMatcher": []
        },
        {
            "label": "ruff-fix",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/ruff check . --fix",
            "problemMatcher": []
        }
    ]
}